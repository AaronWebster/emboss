-- Test `.emb` for the `bit_numbering` attribute on `bits` constructs.

[$default byte_order: "BigEndian"]
[(cpp) namespace: "emboss::test"]


# Default LSB-is-zero numbering (current Emboss behavior)
bits Lsb0Bits:
  7 [+1]  Flag  high_bit
  0 [+4]  UInt  low_nibble
  4 [+4]  UInt  high_nibble


# MSB-is-zero numbering (new feature)
bits Msb0Bits:
  [bit_numbering: "Msb0"]

  0 [+1]  Flag  high_bit
  1 [+4]  UInt  high_nibble
  5 [+3]  UInt  low_bits


# Explicit LSB-is-zero numbering
bits ExplicitLsb0Bits:
  [bit_numbering: "Lsb0"]

  7 [+1]  Flag  high_bit
  0 [+4]  UInt  low_nibble


struct BitNumberingStruct:
  0 [+1]  Lsb0Bits   lsb0_bits
  1 [+1]  Msb0Bits   msb0_bits
  2 [+1]  ExplicitLsb0Bits  explicit_lsb0_bits
